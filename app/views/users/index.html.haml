%h1 Listing users 

%table
  %thead
    %tr
      %th id
      %th email
      %th role
      %th assign role
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.email
        %td
          -user.roles.each do|role|
            = role.name
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

